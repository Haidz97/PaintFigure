<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<VBox alignment="CENTER" maxHeight="700.0" minHeight="500" prefHeight="593.0" prefWidth="940.0" spacing="0.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.paintfigure.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <Canvas fx:id="canvas" height="487.0" onMouseClicked="#onMouseEvent" width="900">
    <rotationAxis>
      <Point3D />
    </rotationAxis>
  </Canvas>
  <FlowPane alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" prefHeight="54.0" prefWidth="620.0" prefWrapLength="620.0">
    <Button mnemonicParsing="false" onAction="#onClickRectangle" prefHeight="54.0" prefWidth="184.0" text="Прямоугольник" />
    <Button mnemonicParsing="false" onAction="#onClickLine" prefHeight="53.0" prefWidth="124.0" text="Линия" />
    <Button mnemonicParsing="false" onAction="#onClickTriangle" prefHeight="53.0" prefWidth="124.0" text="Треугольник" />
    <Button mnemonicParsing="false" onAction="#onClickOval" prefHeight="54.0" prefWidth="186.0" text="Овал" />
    <ColorPicker fx:id="colorPicker" onAction="#onColorChanged">
         <value>
            <Color red="1.0" green="0.03333333507180214" />
         </value></ColorPicker>
  </FlowPane>
</VBox>
